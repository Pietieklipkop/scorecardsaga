rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to perform all actions on players,
    // assuming all write operations are handled by trusted server-side code (flows).
    match /players/{playerId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to perform all actions on activity logs,
    // assuming all write operations are handled by trusted server-side code (flows).
    match /activity_logs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to perform all actions on WhatsApp logs.
    // This allows flows to create logs and the client to list/delete them.
    match /whatsapp_logs/{logId} {
       allow read, write, list, delete: if request.auth != null;
    }

    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
