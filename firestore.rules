
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'players' collection
    match /players/{playerId} {
      // Anyone can read the leaderboard
      allow read;
      // Only authenticated users can create, update, or delete players
      allow create, update, delete: if isAuthenticated();
    }

    // Rules for the 'activity_logs' collection
    match /activity_logs/{logId} {
      // Only authenticated users can read or create activity logs
      allow read, create: if isAuthenticated();
      // No one can update or delete activity logs to maintain integrity
      allow update, delete: if false;
    }

    // Rules for the 'whatsapp_logs' collection
    match /whatsapp_logs/{logId} {
        // Authenticated users (i.e., your server) can create new logs
        allow create: if isAuthenticated();
        // Authenticated users can read the logs for the viewer
        allow read: if isAuthenticated();
        // Authenticated users can delete logs (for the 'clear all' button)
        allow delete: if isAuthenticated();
        // Authenticated users can update a log (to add success/error status)
        allow update: if isAuthenticated();
        // Allow listing the collection for the "Clear All Logs" feature
        allow list: if isAuthenticated();
    }
  }
}
