rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Players can be managed by any authenticated user
    match /players/{playerId} {
      allow read, write: if request.auth != null;
    }

    // Activity logs can be created and read by authenticated users
    match /activity_logs/{logId} {
      allow read, create: if request.auth != null;
    }
    
    // WhatsApp logs can be managed by authenticated users.
    // Allow 'list' for the query that powers the "clear logs" button.
    match /whatsapp_logs/{logId} {
      allow list, read, create, delete: if request.auth != null;
    }

    // Public scoreboard can be read by anyone
    match /players/{playerId} {
        allow read: if true;
    }
  }
}