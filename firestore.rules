rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Players can be read by anyone, but only created, updated, or deleted by authenticated users.
    match /players/{playerId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Activity logs can be read and created by authenticated users.
    match /activity_logs/{logId} {
      allow read, create: if request.auth != null;
    }

    // WhatsApp logs can be read, listed, created, and deleted by authenticated users.
    match /whatsapp_logs/{logId} {
      allow read, list, create, delete: if request.auth != null;
    }
  }
}
