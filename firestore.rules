
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read for scoreboard, but only authenticated users can modify
    match /players/{playerId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Only authenticated users can read/write activity logs
    match /activity_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Only authenticated users can read/write/delete whatsapp logs
    match /whatsapp_logs/{logId} {
      allow read, write, delete: if request.auth != null;
    }
  }
}
